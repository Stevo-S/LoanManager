@model LoanManager.Models.CompanyProfile
@using LoanManager.CustomHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>CompanyProfile</h4>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Details</h3>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.PostOfficeBox)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PostOfficeBox)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.City)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.City)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ProvinceStateCounty)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProvinceStateCounty)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Country)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Country)
                        </dd>

                    </dl>
                </div>
                <div class="col-md-6">
                    <h3>Logo</h3>
                    <div>
                        <img src="@Url.Content(Html.CompanyLogoPath(Model))" width="256" height="128" />
                    </div>

                </div>
            </div>
        </div>
        
    </div>
    <p>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-info">
            <span class="glyphicon glyphicon-edit"></span>
            Edit Company Profile
        </a>
    </p>
</body>
</html>
