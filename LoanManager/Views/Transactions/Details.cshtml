@model LoanManager.Models.Transaction

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Loan.Id)
        </dt>

        <dd>
            @Html.ActionLink(Model.Loan.Id.ToString(), "Details", "Loans", new { id = Model.LoanId }, null)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Credit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Credit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Debit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Debit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Timestamp)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Timestamp)
        </dd>

    </dl>
</div>

@if (Model.TransactionAttachments.Count() > 0)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Attachments for this transaction</h3>
        </div>
        <div class="panel-body">
            @foreach (var attachment in Model.TransactionAttachments)
            {
                <a href="@Url.Content(attachment.Path)">
                    @Path.GetFileName(attachment.Path)
                </a>;
            }
        </div>
    </div>
}

<p>
    @Html.ActionLink("« Back to List", "Index", null, new { @class = "btn btn-info btn-sm previous_page" })
</p>
